{
  "dataset_reader": {
    "type": "seq2seq",
    "source_add_start_token": false,
    "source_add_end_token": false,
    "target_add_start_token": false,
    "target_add_end_token": false,
    "source_tokenizer": {
      "type": "character"
    },
    "target_tokenizer": {
      "type": "character"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      }
    },
    "target_token_indexers": {
      "tokens": {
        "namespace": "target_tokens"
      }
    }
  },
  "train_data_path": "data/training_500000.csv",
  "validation_data_path": "data/validation_1000.csv",
  "model": {
    "type": "simple_seq2seq",
    "max_decoding_steps": 50,
    "source_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "vocab_namespace": "source_tokens",
          "embedding_dim": 10,
          "trainable": true
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 10,
      "hidden_size": 10,
      "num_layers": 1
    },
    "target_embedding_dim": 10,
    "target_namespace": "target_tokens",
    "attention": {
      "type": "dot_product"
    }
  },
  "data_loader": {
    "batch_sampler": {
      "type": "bucket",
      "batch_size": 80,
      "padding_noise": 0.0
    }
  },
  "trainer": {
    "cuda_device": -1,
    "num_epochs": 1,
    "optimizer": {
      "type": "adam"
    },
    "num_serialized_models_to_keep": 2,
    "patience": 30
  }
}
